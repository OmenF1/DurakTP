@page
@model Durak.Pages.gameModel
@{

}
<div class="buttons-box">
    <input type="button" value="Start" id="startGame" class="btn btn-success btn-game" />
    <input type="button" value="Leave Game" id="btn-leave" class="btn btn-danger btn-game" />
    <input type="button" value="Pick Up" class="btn btn-primary btn-game" id="PickUp" disabled />
    <input type="button" value="Done Attacking." class="btn btn-primary btn-game" id="FinishAttacking" disabled />
    <input type="button" value="Chat" id="chatWindowButton" class="btn btn-secondary btn-game" onclick="toggleChatWindow()" />
</div>
<div class="main-container">
    <div class="player-seat-1 player-seat-base"><div class="player-icon" id="seat1">seat 1</div></div>
    <div class="player-seat-2 player-seat-base"><div class="player-icon" id="seat2">seat 2</div></div>
    <div class="player-seat-3 player-seat-base"><div class="player-icon" id="seat3">seat 3</div></div>
    <div class="player-seat-4 player-seat-base"><div class="player-icon" id="seat4">seat 4</div></div>
    <div class="player-seat-5 player-seat-base"><div class="player-icon" id="seat5">seat 5</div></div>
    <div class="player-seat-6 player-seat-base"><div class="player-icon" id="seat6">seat 6</div></div>
    <div class="player-seat-7 player-seat-base"><div class="player-icon" id="seat7">seat 7</div></div>
    <div class="player-seat-8 player-seat-base"><div class="player-icon" id="seat8">seat 8</div></div>
    <!-- Playing Table, I'm going to keep the inner table a normal bootstrap grid for now.-->
    <div class="playing-table" id="playingTable">
        <div class="col-9 cards-drop-area" ondrop="HandleDragDrop(event)" ondragover="allowDrop(event)">
            <div class="row col-12" id="cardsInPlayArea">
            </div>
        </div>
    </div>
</div>
<!--    Player hand area as well as area showing the nuke, cards remaining and the timer.-->
<div class="cards-area">
    <div class="player-cards" id="playerCards"></div>
    <div class="card-info" id="deckArea">
        <div id="nuke-holder"></div>
        <div class="card-count" id="card-count-container"></div>
        <div id="timer"></div>
    </div>
</div>

<!-- Chat window-->
<div class="chat-window"  id="chat-window">

    <div class="chat-log">
        <ul id="chatView">
        </ul>
    </div>
    <div class="row p-1 chat-message">
        <div class="mb-3"><input type="text" id="message" placeholder="type a message.." class="form-control" /></div>
    </div>
    <div class="row p-1">
    </div>
</div>

<!--    Notification MessageBox     -->
<div id="message-box" class="message-box bg-dark text-light">
    <p id="message-text"></p>
</div>

<script src="~/js/game/game.js"></script>